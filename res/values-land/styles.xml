<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- list_item_jumps -->

    <style name="LisItemJumpsText.Place">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@id/list_item_jumps_number</item>
    </style>

    <style name="LisItemJumpsText.Aircraft">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@id/list_item_jumps_place</item>
    </style>

    <style name="LisItemJumpsText.Date">
        <item name="android:layout_below">@id/list_item_jumps_place</item>
        <item name="android:layout_toRightOf">@id/list_item_jumps_number</item>
    </style>

    <style name="LisItemJumpsText.Altitude">
        <item name="android:layout_alignLeft">@id/list_item_jumps_aircraft</item>
        <item name="android:layout_below">@id/list_item_jumps_aircraft</item>
    </style>

    <style name="LisItemJumpsText.Description">
        <item name="android:layout_toRightOf">@id/list_item_jumps_aircraft</item>
    </style>


    <!-- fragment_edit_jump -->

    <style name="EditJumpLabel.Number">
        <item name="android:layout_width">100dip</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="EditJumpInput">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentLeft">false</item>
    </style>

    <style name="EditJumpInput.Number">
        <item name="android:layout_toRightOf">@id/label_edit_jump_number</item>
    </style>

    <style name="EditJumpInput.Date">
        <item name="android:layout_below">@id/text_edit_jump_number</item>
        <item name="android:layout_toRightOf">@id/label_edit_jump_date</item>
        <item name="android:layout_alignLeft">@id/text_edit_jump_number</item>
    </style>

    <style name="EditJumpInput.Place">
        <item name="android:layout_below">@id/date_edit_jump_date</item>
        <item name="android:layout_toRightOf">@id/label_edit_jump_place</item>
        <item name="android:layout_alignLeft">@id/date_edit_jump_date</item>
    </style>

    <style name="EditJumpInput.Aircraft">
        <item name="android:layout_below">@id/spinner_edit_jump_place</item>
        <item name="android:layout_toRightOf">@id/label_edit_jump_aircraft</item>
        <item name="android:layout_alignLeft">@id/spinner_edit_jump_place</item>
    </style>

    <style name="EditJumpInput.Equipment">
        <item name="android:layout_below">@id/spinner_edit_jump_aircraft</item>
        <item name="android:layout_toRightOf">@id/label_edit_jump_equipment</item>
        <item name="android:layout_alignLeft">@id/spinner_edit_jump_aircraft</item>
    </style>

    <style name="EditJumpInput.Altitude">
        <item name="android:layout_below">@id/spinner_edit_jump_equipment</item>
        <item name="android:layout_toRightOf">@id/label_edit_jump_altitude</item>
        <item name="android:layout_alignLeft">@id/spinner_edit_jump_equipment</item>
    </style>

    <style name="EditJumpInput.Delay">
        <item name="android:layout_below">@id/text_edit_jump_altitude</item>
        <item name="android:layout_toRightOf">@id/label_edit_jump_delay</item>
        <item name="android:layout_alignLeft">@id/text_edit_jump_altitude</item>
    </style>

    <style name="EditJumpInput.Description">
        <item name="android:layout_height">100dip</item>
        <item name="android:layout_below">@id/text_edit_jump_delay</item>
        <item name="android:layout_toRightOf">@id/label_edit_jump_description</item>
        <item name="android:layout_alignLeft">@id/text_edit_jump_delay</item>
    </style>

</resources>